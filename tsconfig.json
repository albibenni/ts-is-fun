{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "es2020",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
