{
  "name": "busy-bee-api",
  "version": "1.0.0",
  "description": "A simple task management application for the sole purpose of learning how to build type-safe applications.",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/index.ts",
    "test": "vitest",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx,js,jsx}\"",
    "validate:openapi": "tsx src/validate-openapi.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.8",
    "@prisma/client": "^6.8.2",
    "@trpc/server": "^11.1.4",
    "@types/swagger-ui-express": "^4.1.8",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.5.3",
    "openapi3-ts": "^4.4.0",
    "prisma-trpc-generator": "^1.4.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.1",
    "zod-prisma-types": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.27",
    "@types/sqlite3": "^5.1.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "openapi-schema-validator": "^12.1.3",
    "prettier": "^3.5.3",
    "prisma": "^6.8.2",
    "supertest": "^7.1.1",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.33.0"
  }
}
